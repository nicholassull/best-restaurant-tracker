@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@using System.Collections.Generic
@model List<BestRestaurants.Models.Restaurant>;

  <h1>Restaurants</h1>
  <hr />
  <div class="my-4">
    @if (@Model.Count == 0)
  {
    <h2>There are not restaurants yet!</h2>
  }

  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId}) | @restaurant.Cuisine.Name </li>
  }

  </div>
<button class="btn btn-outline-primary">@Html.ActionLink("Add a new restaurant", "Create")</button>
<button class="btn btn-outline-primary">@Html.ActionLink("Home", "Index", "Home")</button>