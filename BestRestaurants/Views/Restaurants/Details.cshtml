@{
  Layout = "_Layout";
}
@model BestRestaurants.Models.Restaurant

<h2>Restaurant Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name)</h3>

<p>@Html.DisplayNameFor(model => model.Cuisine): @Html.DisplayFor(model => model.Cuisine)</p>
<p>@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(model => model.Location)</p>
<p>Average Cost: @Html.DisplayFor(model => model.AvgMealCost)</p>

<p>@Html.ActionLink("Delete", "Delete", new {id = Model.RestaurantId})</p>
<p>@Html.ActionLink("Edit", "Edit", new {id = Model.RestaurantId})</p>
<p>@Html.ActionLink("Back", "Index")</p>