@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h2>Add Cuisine</h2>
<hr />
<h4>Associate a cuisine to this restaurant: @Html.DisplayFor(model => model.Name)</h4>

<div class="my-4">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.RestaurantId)

    @Html.Label("Select cuisine")
    @Html.DropDownList("CuisineId")

    <input class="btn btn-outline-danger" type="submit" value="Save" />
  }
</div>

<button class="btn btn-outline-primary">@Html.ActionLink("Back", "Index")</button>