@{
  Layout = "_Layout";
}
@model BestRestaurants.Models.Cuisine

<h2>Cuisine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (Model.JoinEntities.Count() == 0 )
{
  <p>No restaurants yet serve this cuisine.</p>
}
else
{
  <h4>Restaurants that server this cuisine</h4>
  <ul id="child-restaurant-ul">
  @foreach (var join in Model.JoinEntities)
  {
    <li>Name: @Html.ActionLink($"{@join.Cuisine.Name}", "Details", "Restaurants", new {id = @join.CuisineId})</li>
  }
</ul>
}

<button class="btn btn-outline-primary">@Html.ActionLink("Delete", "Delete", new {id = Model.CuisineId})</button>
<button class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new {id = Model.CuisineId})</button>
<button class="btn btn-outline-primary">@Html.ActionLink("Back", "Index")</button>

